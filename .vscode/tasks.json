{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run generator",
            "type": "shell",
            "command": "python3",
            "args": [
                "${workspaceFolder}/generate_labels.py"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$python"
        }
        {
            "label": "Run tests",
            "type": "shell",
            "command": "${command:python.interpreterPath}",
            "args": [
                "-m",
                "pytest"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": "$python"
        }
    ]
}